@model IEnumerable<Arcarys.Models.Molecule>

<p>
    @Html.ActionLink("Agregar molécula", "Create", null, new { @class = "btn btn-primary" })
</p>

@{
    if (Model.Count() > 0)
    {

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Detalles", "Details", new { name = item.Name })
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <div>
            No hay moléculas almacenadas por el momento..
        </div>
    }
}

